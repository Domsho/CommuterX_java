<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FF121212" /> <!-- 70% opacity -->
            <corners android:radius="24dp" /> <!-- Increased radius for more rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF121212" /> <!-- 60% opacity when not focused -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>