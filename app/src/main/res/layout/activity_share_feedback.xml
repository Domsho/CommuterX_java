<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/share_feedback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Feedback"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_font_family"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/feedback_input"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:background="#1E1E1E"
        android:gravity="top"
        android:hint="Tell us what you think..."
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="#666666"
        app:layout_constraintTop_toBottomOf="@id/share_feedback_title"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Feedback"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/feedback_input"/>

</androidx.constraintlayout.widget.ConstraintLayout>